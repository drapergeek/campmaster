<h1>New Receipt</h1>
<%= simple_form_for(@receipt, html: {class: 'form-horizontal'}) do |form| %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :email %>
  <%= form.input :phone %>
  <%= form.input :address %>
  <%= form.input :city %>
  <%= form.input :state, collection: State.all %>
  <%= form.input :zip %>
  <div class="form-actions">
    <%= form.button :submit, html: {class: "btn btn-primary"} %>
  </div>
<% end %>
